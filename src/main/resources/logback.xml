<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="DEV_HOME" value="logs"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- File Appender for ActorController -->
    <appender name="DEBUG-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DEV_HOME}/debug.log</file>
        <!-- Other configurations for rolling policy, encoding, etc. -->

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>
                ${DEV_HOME}/archived/debug-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>

            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>3GB</totalSizeCap>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="TELEGRAM"
              class="com.github.paolodenti.telegram.logback.TelegramAppender">
        <botToken>6542871568:AAGFF5iGLn-k4aoxQH5RgDSwlVtEqE1nN4A</botToken>
        <chatId>-4004132640</chatId>
        <Layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</Pattern>
        </Layout>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>
    <loggers>
        <logger name="com.github.paolodenti.telegram.logback" level="DEBUG">
            <appender-ref ref="TELEGRAM"/>
        </logger>

        <logger name="com.group06.sakila.service" level="debug" additivity="false">
            <appender-ref ref="DEBUG-FILE"/>
            <appender-ref ref="STDOUT"/>
        </logger>
    </loggers>

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="TELEGRAM"/>
        <appender-ref ref="DEBUG-FILE"/>
    </root>
</configuration>